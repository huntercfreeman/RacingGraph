@typeparam ItemType

<div style="position: relative; height: @(Height);"class="dm2bdRacingGraph">
    @foreach(var item in TopFour)
    {
        <div style="position: inherit; top:@(item.Top)px; display:flex;margin-bottom: 2%;box-sizing: border-box; height: 20%; width: 100%;" class="dm2bdRacingGraphBarContainer">
            <div style="width:6%;" class="dm2bdRacingGraphImageContainer">
                <img src="@ImageURLSelector(item.Item)" style="height: 100%;" />
            </div>
            <div style="display: flex; justify-content: flex-end; align-items: center; padding-right: 10px; background-color: beige; height: 100%; width:@(ScoreListSelector(item.Item).ElementAt(DateIndex) / MaxValue * 60)%; max-width: 60%;" class="dm2bdRacingGraphBar">
                @NameSelector(item.Item)
            </div>
            <div style="padding-left: 10px; display: flex; align-items: center;" class="dm2bdRacingGraphScore">
                @ScoreListSelector(item.Item).ElementAt(DateIndex)
            </div>
        </div>
    }
</div>